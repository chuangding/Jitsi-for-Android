<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#72bbcc" />
            <stroke
                android:width="1dp"
                android:color="#3e8cb3" />
            <corners
                android:radius="6dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#72bbcc"
                android:endColor="#3e8cb3"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#3e8cb3" />
            <corners
                android:radius="6dp" />

        </shape>
    </item>

</selector>

