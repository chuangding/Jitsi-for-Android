<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#0db6ff" />
            <stroke
                android:width="1dp"
                android:color="#0694ff" />
            <corners
                android:radius="6dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#0db6ff"
                android:endColor="#0694ff"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#0694ff" />
            <corners
                android:radius="6dp" />

        </shape>
    </item>

</selector>

